@page
@model siemens.Pages.Machines.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>List of available machines</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Machine[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Machine[0].ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Machine[0].MaxTemperature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Machine[0].MinVoltage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Machine) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxTemperature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinVoltage)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
